<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reposLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <me.szymanski.arch.widgets.TextInputWidget
        android:id="@+id/listInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <me.szymanski.arch.widgets.ErrorBarWidget
        android:id="@+id/listErrorBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <me.szymanski.arch.widgets.list.ListWidget
        android:id="@+id/listListWidget"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>